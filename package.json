{
  "name": "shadowtorrent",
  "version": "1.0.0",
  "description": "A high-performance, privacy-focused torrent client with optimized speeds and modern dark UI",
  "main": "src/main/main.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm run start:renderer\" \"wait-on http://localhost:3000 && npm run start:main\"",
    "start:main": "cross-env NODE_ENV=development electron .",
    "start:renderer": "cd src/renderer && npm start",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "cd src/renderer && npm run build",
    "build:main": "electron-builder",
    "build:production": "node build-production.js",
    "dev": "concurrently \"npm run start:renderer\" \"wait-on http://localhost:3000 && npm run start:main\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "cd src/renderer && npm install || echo Renderer install skipped",
    "test": "npm run test:main && npm run test:renderer",
    "test:main": "jest src/main/__tests__",
    "test:renderer": "cd src/renderer && npm test -- --watchAll=false",
    "lint": "eslint src/main/**/*.js",
    "lint:fix": "eslint src/main/**/*.js --fix"
  },
  "build": {
    "appId": "com.shadowtorrent.app",
    "productName": "ShadowTorrent",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main/**/*",
      "src/renderer/build/**/*",
      "node_modules/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraMetadata": {
      "main": "src/main/main.js"
    },
    "compression": "maximum",
    "removePackageScripts": true,
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "src/renderer/public/favicon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "src/renderer/public/favicon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "tar.gz",
          "arch": ["x64"]
        }
      ],
      "icon": "src/renderer/public/favicon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ShadowTorrent"
    }
  },
  "keywords": [
    "torrent",
    "p2p",
    "privacy",
    "lightweight",
    "bittorrent"
  ],
  "author": "ShadowTorrent Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "node-disk-info": "^1.3.0",
    "pretty-bytes": "^6.0.0",
    "webtorrent": "^2.0.0",
    "ws": "^8.12.0"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "src/main/__tests__"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/main/**/*.js",
      "!src/main/__tests__/**",
      "!**/node_modules/**"
    ]
  }
}
